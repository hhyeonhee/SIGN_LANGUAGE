<Page x:Class="Sign_Language.Pages.TextConfirmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="TextConfirmPage">

    <!-- 1. 리소스 섹션: 라운드 버튼 스타일 정의 -->
    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Noto Sans KR"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderBrush" Value="#4A90E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!-- 2. 전체 레이아웃 -->
    <Grid Background="White" Margin="20">
        <StackPanel>

            <!-- 2.1 상단 헤더: 뒤로가기 + 제목 -->
            <DockPanel Margin="0,0,0,20" HorizontalAlignment="Stretch">
                <Button Width="40" Height="40"
                        Click="Back_Click"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Padding="0">
                    <Grid Width="40" Height="40">
                        <Ellipse Fill="#2196F3"/>
                        <Image Source="/Sign_Language;component/imgs/back.png"
                               Width="20" Height="20"
                               Stretch="Uniform"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Grid>
                </Button>
                <TextBlock Text="영상 출력"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
                           FontFamily="Noto Sans KR"/>
            </DockPanel>

            <!-- 2.2 변환된 텍스트 표시 -->
            <TextBlock Text="변환된 텍스트" FontSize="16"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"
                       FontFamily="Noto Sans KR"/>
            <Border BorderBrush="#4A90E2"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="5"
                    Margin="10,0">
                <TextBlock x:Name="ResultTextBlock"
                           Text="변환된 텍스트 표시"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           FontFamily="Noto Sans KR"/>
            </Border>

            <!-- ★ 2.2‑1 영어 번역 표시 -->
            <TextBlock Text="영어 번역" FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"
                       FontFamily="Noto Sans KR"/>
            <Border BorderBrush="#4A90E2"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="5"
                    Margin="10,0">
                <TextBlock x:Name="EnglishTextBlock"
                           Text="영어 번역 표시"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           FontFamily="Noto Sans KR"/>
            </Border>

            <!-- 2.3 확인 메시지 + 버튼 -->
            <TextBlock x:Name="ConfirmMessage"
                       Text="메세지가 잘 입력되었나요?"
                       FontSize="16"
                       Margin="0,20,0,10"
                       HorizontalAlignment="Center"
                       FontFamily="Noto Sans KR"/>
            <StackPanel x:Name="ButtonPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="YesButton"
                        Content="예"
                        Click="YesButton_Click"
                        Style="{StaticResource RoundedButtonStyle}"
                        FontWeight="Bold"/>
                <Button x:Name="NoButton"
                        Content="아니오"
                        Click="NoButton_Click"
                        Style="{StaticResource RoundedButtonStyle}"
                        FontWeight="Bold"/>
            </StackPanel>

            <!-- 2.4 영상 레이블 -->
            <TextBlock x:Name="VideoLabel"
                       Text="영상"
                       FontSize="16"
                       FontFamily="Noto Sans KR"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed"
                       Margin="0,20,0,10"/>

            <!-- 2.5 영상 플레이어 & 다시재생 버튼 -->
            <Border x:Name="VideoBorder"
                    BorderBrush="#4A90E2"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="5"
                    Margin="10,0"
                    Visibility="Collapsed">
                <Grid>
                    <MediaElement x:Name="VideoPlayer"
                                  Height="240"
                                  LoadedBehavior="Manual"
                                  UnloadedBehavior="Stop"
                                  Stretch="Uniform"
                                  MediaEnded="VideoPlayer_MediaEnded"
                                  MouseLeftButtonUp="VideoPlayer_MouseLeftButtonUp"/>
                    <Button x:Name="ReplayButton"
                            Visibility="Collapsed"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="60" Height="60"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="ReplayButton_Click">
                        <Image Source="/Sign_Language;component/imgs/replay_white.png"
                               Width="40" Height="40"/>
                    </Button>
                </Grid>
            </Border>

        </StackPanel>
    </Grid>
</Page>
