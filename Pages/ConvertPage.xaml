<Page x:Class="Sign_Language.Pages.ConvertPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      Title="ConvertPage">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 상단 -->
            <RowDefinition Height="*"/>
            <!-- 본문 -->
        </Grid.RowDefinitions>

        <!-- 상단: 뒤로가기 + 타이틀 -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 뒤로가기 버튼 -->
            <Button Grid.Column="0"
                    Width="40" Height="40"
                    Background="#2196F3"
                    BorderBrush="#4A90E2"
                    BorderThickness="1"
                    Click="Back_Click"
                    Margin="0,0,10,0"
                    Padding="0"
                    HorizontalAlignment="Left">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Image Source="/imgs/back.png" Width="20" Height="20"/>
            </Button>

            <!-- 타이틀 텍스트 -->
            <TextBlock Grid.Column="1"
                       Text="음성 녹음"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="18"
                       FontWeight="Bold"
                       FontFamily="Noto Sans KR"/>
        </Grid>

        <!-- 본문 내용 -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <!-- 마이크 버튼 -->
            <Button Click="RecordButton_Click"
                    Width="150" Height="150"
                    BorderThickness="0"
                    Background="Transparent"
                    Margin="0 0 0 20">
                <Image Source="/imgs/record.png"
                       Stretch="Uniform"/>
            </Button>

            <TextBlock Text="버튼을 눌러 녹음을 시작하세요"
                       FontSize="16"
                       TextAlignment="Center" FontFamily="Noto Sans KR"/>
        </StackPanel>

        <!-- 로딩 오버레이 -->
        <Grid x:Name="loadingGrid"
              Background="#80000000"
              Visibility="Collapsed"
              Grid.RowSpan="2">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:Name="GifImage"
                       Width="100" Height="100"
                       Stretch="Fill"/>
                <TextBlock Text="음성 인식 중..."
                           FontSize="16"
                           Foreground="White"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
